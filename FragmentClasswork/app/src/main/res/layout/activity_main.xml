<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/frag1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.example.fragmentclasswork.AFragment"
        ></fragment>

    <fragment
        android:id="@+id/frag2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:name="com.example.fragmentclasswork.BFragment"
        android:layout_toRightOf="@id/frag1"
        ></fragment>


<fragment
android:id="@+id/frag3"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="2"
android:name="com.example.fragmentclasswork.CFragment"
    android:layout_below="@id/frag1"
    ></fragment>

</RelativeLayout>

